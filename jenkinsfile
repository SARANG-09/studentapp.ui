pipeline {
    agent any
    stages {
        stage('git pull') { 
            steps {
                git 'https://github.com/deepak-umre/studentapp.ui.git'
            }
        }
        stage('mvn build') { 
            steps {
                sh 'mvn clean package'
            }
        }
        stage('sonar test') { 
            steps {
                echo "Testing with SonarQube"
                sh '''
               mvn clean verify sonar:sonar \
                -Dsonar.projectKey=demo \
                -Dsonar.host.url=http://16.16.144.44:9000 \
                -Dsonar.login=sqp_7e11a0efb2af6bde8070ae92d579b96336b57c8f
                '''
            }
         }
         stage('deploy') {
            steps {
                echo "deploy on tomcat "
                sh '''
                cp -r  /var/lib/jenkins/workspace/deploy/target/*.war /opt/apache-tomcat-8.5.99/webapps/
                '''
            }
         }
    }
}


